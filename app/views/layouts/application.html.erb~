<script type="text/javascript">

function fieldFocus(element) {
   if (element.value == element.defaultValue) {
element.value = '';
   }
   
} 

function fieldBlur(element){
   if (element.value == '') {
element.value = element.defaultValue;
   }
   
} 

</script> 

